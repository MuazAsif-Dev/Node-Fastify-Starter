{
	"name": "nfdp",
	"version": "1.0.0",
	"description": "",
	"main": "dist/src/index.js",
	"type": "module",
	"scripts": {
		"start": "node dist/src/index.js",
		"build": "rimraf dist && tsc && tsc-alias",
		"dev": "tsx watch src/index.js",
		"type-check": "npx tsc --watch --noEmit",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check --write .",
		"ci:check": "biome ci .",
		"db:start": "docker run --name drizzle-postgres -e POSTGRES_PASSWORD=mypassword -d -p 5432:5432 postgres:17",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio --verbose",
		"db:stop": "docker stop drizzle-postgres"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@fastify/cors": "^10.0.1",
		"@fastify/error": "^4.0.0",
		"@fastify/helmet": "^13.0.0",
		"@fastify/rate-limit": "^10.2.1",
		"@fastify/sensible": "^6.0.2",
		"@fastify/swagger": "^9.4.0",
		"@fastify/under-pressure": "^9.0.2",
		"@scalar/fastify-api-reference": "^1.25.99",
		"argon2": "^0.41.1",
		"better-auth": "^1.1.8",
		"close-with-grace": "^2.1.0",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.3",
		"drizzle-zod": "^0.6.1",
		"fastify": "^5.2.0",
		"fastify-plugin": "^5.0.1",
		"fastify-type-provider-zod": "^4.0.2",
		"pg": "^8.13.1",
		"zod": "^3.24.1",
		"zod-to-json-schema": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.10.3",
		"@types/pg": "^8.11.10",
		"drizzle-kit": "^0.30.1",
		"pino-pretty": "^13.0.0",
		"rimraf": "^6.0.1",
		"tsc-alias": "^1.8.10",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	}
